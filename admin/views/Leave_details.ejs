<!DOCTYPE html>
<html lang="en">
  <%- include('header.ejs') -%>
  <title>Leave Details</title>
<body style="background-color: #f3f3f3;">
  <%- include('navbar.ejs') -%>

    <div class="leave_letter_main" style="overflow: scroll;" id="leave_details">
      <div class="leave_letter_details">
        <h2>EMPLOYEE LEAVE DETAILS</h2>
        <div class="leave_letter_table_side">
          <input type="text" name="search_name_side"  id="search_here"  onkeyup="myFunction()"  placeholder="Search Here">
          
        </div>
        <table class="table" id="main_table">
            <thead id="leave_letter_header">
              <tr>
                <th class="col-1">Name</th>
                <th class="col-3">Email</th>
                <th class="col-2">Subject</th>
                <th class="col-5">Purpose</th>
                <th class="col-1"></th>
              </tr>
            </thead>
            <tbody>
              <% if (leave_details.length > 0) { %>
                <% leave_details.forEach ( details => {%>
              <tr>
                <td class="col-1"><%= details.name %></td>
                <td class="col-3"><%= details.email %></td>
                <td class="col-2"><%= details.name %></td>
                <td class="col-5" style="padding: 5px 30px;"><%= details.purpose %></td>
                <td class="col-1">
                  <button type="button" id="dropdownMenuReference" data-bs-toggle="dropdown" aria-expanded="false" data-bs-reference="parent" class="drop_btn_ed">
                   <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                    <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                  </svg>
                </button>
                <ul id="nav_dropdown" class="dropdown-menu" aria-labelledby="dropdownMenuReference">
                  
                  <li ><form action="/api/admin/leave_details/<%= details.id %>" method="post" ><input id="acc_delete" type="submit" value="DELETE"></form></li>
                 
                </ul>
                </td>
              </tr>
            </tbody>
            
            <% }) %>
            <% } %>
        </table>
    </div>
    </div>
    <script src="/js/search.js"></script>
    <script src="/js/leave_letter.js"> </script>

</body>
</html>