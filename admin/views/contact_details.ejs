<!DOCTYPE html>
<html lang="en">
  <%- include('header.ejs') -%>
  <title>Contact Details</title>
<body style="background-color: #f3f3f3;">
  <%- include('navbar.ejs') -%>

    <div class="cont_main" style="overflow: scroll;" id="contact_details">
      <div class="cont_details">
        <h2>CONTACT DETAILS</h2>
        <div class="cont_table_side">
          <input type="text" name="search_name_side"  id="search_here" onkeyup="myFunction()"  placeholder="Search Here">
        </div> 
        <table class="table" id="main_table">
            <thead id="cont_header">
              <tr>
                <th class="col-1">Name</th>
                <th class="col-3">Email</th>
                <th class="col-7">Message</th>
                <th class="col-1"></th>
              </tr>
            </thead>
            <% if(contact_details.length > 0) { %>
              <% contact_details.forEach ( details => {%> 
            <tbody>
              <tr>
                <td class="col-1"><%= details.name %></td>
                <td class="col-3"><%= details.email %></td>
                <td class="col-7" style="padding: 5px 30px;"><%= details.message %></td>
                <td>
                  <td>
                    <button type="button" id="dropdownMenuReference" data-bs-toggle="dropdown" aria-expanded="false" data-bs-reference="parent" class="drop_btn_ed">
                     <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" class="bi bi-three-dots-vertical" viewBox="0 0 16 16">
                      <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z"/>
                    </svg>
                  </button>
                  <ul id="nav_dropdown" class="dropdown-menu" aria-labelledby="dropdownMenuReference">
                    
                    
                    <li ><form action="/api/admin/contact_details/<%= details.id %>" method="post" ><input id="acc_delete" type="submit" value="DELETE"></form></li>
                   
                  </ul>
                  </td>
                </td>
              </tr>
            </tbody>
            <% }) %>
            <% } %>
        </table>
    </div>
    </div>
    <script src="/js/search.js"></script>
    <script src="/js/contactdetails.js"> </script>

</body>
</html>